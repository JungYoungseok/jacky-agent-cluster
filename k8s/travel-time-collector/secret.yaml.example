# API 키는 Secret으로 관리. 실제 배포 시 아래처럼 생성 후 secret.yaml은 .gitignore.
#
# kubectl create secret generic travel-time-collector-secret \
#   --namespace=travel-time \
#   --from-literal=KAKAO_REST_API_KEY=your_kakao_key \
#   --from-literal=ODSAY_API_KEY=your_odsay_key
#
# 또는 base64 인코딩 후 적용:
# echo -n 'your_kakao_key' | base64
# echo -n 'your_odsay_key' | base64
---
apiVersion: v1
kind: Secret
metadata:
  name: travel-time-collector-secret
  namespace: travel-time
  labels:
    app: travel-time-collector
type: Opaque
stringData:
  KAKAO_REST_API_KEY: ""  # 실제 값으로 교체
  ODSAY_API_KEY: ""      # 실제 값으로 교체
